<% include partials/header %>


<div class="container sign-up">
    <h1>Sign Up</h1>
    <hr id="hr-signup">
    <form action="/register" method="POST">
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" type="email" name="email" placeholder="eg. abcd@gmail.com">
        </div>
        <div class="form-group">
            <label>Username</label>
            <input class="form-control" type="text" name="username" placeholder="eg. John">
        </div>
        <div class="form-group">
            <label>Avatar</label>
            <input class="form-control" type="text" name="avatar" placeholder="avatar image url">
        </div>
        <div class="form-group">
            <label>Full Name</label>
            <input class="form-control" type="text" name="name" placeholder="eg. John Doe">
        </div>
        <div class="form-group">
            <label>Age</label>
            <input class="form-control" type="number" name="age" placeholder="eg. 20">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" type="password" name="password" placeholder="Password">
        </div>
        <div class="form-group">
            <label>Admin Code</label>
            <input class="form-control" type="text" name="adminCode" placeholder="admin Code">
        </div>
        <div id="signup-btn">
            <button class="btn btn-block">Sign Up</button>  
        </div>  
    </form>
</div>


<% include partials/footer %>