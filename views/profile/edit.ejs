<% include ../partials/header %>


<div class="container sign-up">
    <h1>Edit Profile</h1>
    <hr id="hr-signup">
    <form action="/profile/<%= foundProf._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" type="email" name="user[email]" value="<%= foundProf.email %>">
        </div>
        <div class="form-group">
            <label>Username</label>
            <input class="form-control" type="text" name="user[username]" value="<%= foundProf.username %>">
        </div>
        <div class="form-group">
            <label>Full Name</label>
            <input class="form-control" type="text" name="user[name]" value="<%= foundProf.name %>">
        </div>
        <div class="form-group">
            <label>Age</label>
            <input class="form-control" type="number" name="user[age]" value="<%= foundProf.age %>">
        </div>
        <div id="signup-btn">
            <button class="btn btn-block">Update</button>  
        </div>  
    </form>
</div>


<% include ../partials/footer %>