<% include ../partials/header %>

<div class="container">
    <form action="/blogs" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="form-group">
            <label>Image URL <i class="fa fa-link" aria-hidden="true"></i></label>
            <input class="form-control" type="text" name="blog[image]" placeholder="image url">
        </div>
        <div class="form-group">
            <label>Description <i class="fa fa-pencil-square-o" aria-hidden="true"></i></label>
            <textarea class="form-control" name="blog[body]"></textarea>
        </div>
        <button class="btn btn-primary">Submit!</button>
    </form>
</div>

<% include ../partials/footer %>