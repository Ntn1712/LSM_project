<% include ../partials/header %>

<div class="container">
    <form action="/blogs/<%= foundBlog._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="blog[title]" value="<%= foundBlog.title %>">
        </div>
        <div class="form-group">
            <label>Image URL <i class="fa fa-link" aria-hidden="true"></i></label>
            <input class="form-control" type="text" name="blog[image]" value="<%= foundBlog.image %>">
        </div>
        <div class="form-group">
            <label>Description <i class="fa fa-pencil-square-o" aria-hidden="true"></i></label>
            <textarea class="form-control" name="blog[body]"><%= foundBlog.body %></textarea>
        </div>
        <button class="btn btn-primary">Submit!</button>
    </form>
</div>

<% include ../partials/footer %>