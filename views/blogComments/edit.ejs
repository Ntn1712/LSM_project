<% include ../partials/header %>

<div class="container com-con">
    <h2>Edit Comment</h2>
    <hr class="com-hr">
    <div>
        <form action="/blogs/<%= blogs._id %>/comments/<%= foundComment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Comment</label>
                <input class="form-control" type="text" name=comment[text] value="<%= foundComment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Update!</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>